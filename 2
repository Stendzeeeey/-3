TreeWork11°. Дано дерево поиска и указатель корень дерева P1. Необходимо проверить есть ли в дереве значение X. 
В качестве результата вернуть True или False. Решение должно иметь сложность по времени исполнения T(n) = O(log n), где n - число вершин в дереве.



#include <windows.h>
#pragma hdrstop
#include "pt4.h"
using namespace std;

bool Add(PNode &Tree, int x)
{
	if (Tree)
		if (Tree->Data != x)
		{
			if (x < Tree->Data)
				Add(Tree->Left, x);
			else
				Add(Tree->Right, x);
		}
		else
			return true;
	else
		return false;
}


void Solve()
{
	Task("TreeWork11");
	PNode p1;
	int x;
	pt >> p1 >> x;
	pt << Add(p1, x);
}
